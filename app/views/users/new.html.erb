<h1 align='center'>Sign up for Alpha Blog</h1>
<div>
  <%= form_for @user do |f| %>
    <%= render "shared/errors", obj: @user %>
    <div class="form-group row">
      <%= f.label :username, class: "col-sm-2 col-form-label"  %>
      <div class="col-sm-8">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter User name", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, class: "col-sm-2 col-form-label"  %>
      <div class="col-sm-8">
        <%= f.email_field :email, rows: 10, class: "form-control", placeholder: "Enter email"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password, class: "col-sm-2 col-form-label"  %>
      <div class="col-sm-8">
        <%= f.password_field :password, rows: 10, class: "form-control", placeholder: "Enter password"%>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-8">
        [ <%= link_to "Back to articles", articles_path %> ]
      </div>
    </div>
  <% end %>
</div>
